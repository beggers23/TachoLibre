<h1>This Lil Tacho-rita</h1>

<%= link_to "View Table", table_path(@guest.table_id), class:'button' %>

<!-- Also need a button that will say "Add to Order" -->
<%= link_to "Add To Order", guest_items_path(params[:id]), class:'button' %>

<!-- Need a button at the bottom to say "Print Reciept" or "Mark as paid" -->
<!-- Button for checkout -->
<%= button_to 'Print Receipt', guest_path(@guest.id), method: :delete %>

<div class='container' id='receipt'>
  <!-- Each order will just be added to a list of orders that will show up on the view looking like a reciept -->
  <% @orders.each do |order| %>
   <% if order.item.category != 'booze' %>
   <!--  List them out here -->
   <!-- Each item is clickable so that it can be removed from the list -->
    <%= button_to "#{order.item.name} #{order.item.category} | $#{order.item.price}", order_path(order), method: :delete, class:'food' %>
    <% else %>
      <%= button_to "#{order.item.name} | $#{order.item.price}", order_path(order), method: :delete, class:'food' %>
    <% end %>
  <% end %>

  <!-- Bill total at the bottom - adds up all the prices of all the items on the receipt -->
  <div class='total'>
    <h1>Total $<%= @total %></h1>
  </div>
</div>
