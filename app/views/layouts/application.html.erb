<!DOCTYPE html>
<html>
<head>
  <title>TachosApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if current_user %>
      <%= button_to "Server Profile", profile_path(current_user.id), method: :get %>
      <h1>TAC-HO LIBRE</h1>
      <%= button_to "Logout", sessions_path, method: :destroy %>

    <% else %>
      <h1>TAC-HO LIBRE</h1>
    <% end %>
  </header>

  <%= yield %>

</body>
</html>
