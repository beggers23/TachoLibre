<div class='container'>
  <div class='row'>
    <div class='tweleve columns'>
      <div class='nacho-header'>
        <h1 class='menu-title'>Nachos</h1>
      </div>
      <% @nachos.each do |n| %>
        <%= form_for @order do |f| %>
          <%= f.hidden_field :guest_id, value: params[:guest_id] %>
          <%= f.hidden_field :item_id, value: n.id %>
          <%= f.submit "#{n.name} : $#{n.price}", class:'food' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="tweleve columns">
      <div class='taco-header'>
        <h1 class='menu-title'>Tacos</h1>
      </div>

      <% @tacos.each do |t| %>
          <%= form_for @order do |f| %>
            <%= f.hidden_field :guest_id, value: params[:guest_id] %>
            <%= f.hidden_field :item_id, value: t.id %>
            <%= f.submit "#{t.name} : $#{t.price}", class:'food' %>
          <% end %>
        <!-- button to add to specific guests order -->
      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="tweleve columns">
      <div class="booze-header">
        <h1 class='menu-title'>Booze</h1>
      </div>
      <% @booze.each do |b| %>
        <%= form_for @order do |f| %>
          <%= f.hidden_field :guest_id, value: params[:guest_id] %>
          <%= f.hidden_field :item_id, value: b.id %>
          <%= f.submit "#{b.name} : $#{b.price}", class:'food' %>
        <% end %>
        <!-- button to add to specific guests order -->
      <% end %>
    </div>
  </div>
</div>
